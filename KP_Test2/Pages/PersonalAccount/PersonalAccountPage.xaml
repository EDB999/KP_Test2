<Page x:Class="KP_Test2.Pages.PersonalAccount.PersonalAccountPage"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KP_Test2.Pages.PersonalAccount"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PersonalAccountPage">

    <Grid Background="White">
        <StackPanel>
            <TextBlock Text="Личный кабинет" FontSize="30" HorizontalAlignment="Center"></TextBlock>
            <Button Content="Home" Width="100" HorizontalAlignment="Left" Margin="10"></Button>
            <TextBox x:Name="textBoxRating" materialDesign:HintAssist.Hint="Введите рейтинг?" Style="{StaticResource MaterialDesignFloatingHintTextBox}"></TextBox>
        </StackPanel>
    </Grid>
</Page>
