<Page x:Class="KP_Test2.Pages.HistoryOrdersPage.HistoryOredersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KP_Test2.Pages.HistoryOrdersPage"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HistoryOredersPage">

    <Grid Background="White">
        <StackPanel>
            <TextBlock Text="История заказов" FontSize="30" 
FontWeight="Bold" Margin="0 0 0 20" HorizontalAlignment="Center" Foreground="Black"/>
            <ListView Height="312"></ListView>
            <Button Name="BackButton" HorizontalAlignment="Left" Content="Назад" Style="{StaticResource MaterialDesignFlatButton}" Foreground="#FF00E2FF" Click="BackButton_Click"/>
        </StackPanel>
    </Grid>
</Page>
